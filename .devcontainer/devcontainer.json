{
  "name": "rust-viterbo",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "init": true,
  "customizations": {
    "vscode": {
      "extensions": [
        "rust-lang.rust-analyzer",
        "vadimcn.vscode-lldb",
        "yzhang.markdown-all-in-one",
        "editorconfig.editorconfig",
        "tamasfe.even-better-toml",
        "redhat.vscode-yaml",
        "usernamehw.errorlens",
        "GitHub.copilot",
        "GitHub.copilot-chat",
        "openai.chatgpt"
      ]
    }
  },
  "postCreateCommand": "bash .devcontainer/postCreate.sh",
  "remoteUser": "vscode"
}
